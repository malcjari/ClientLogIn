<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KonferensrumAPIConnection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="http://193.10.202.77/css/HotelSeasharp.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.6/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @*<img class="kund" src="http://193.10.202.77/images/kund.jpg" />
        <p style="text-align: right">Kundservice</p>*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:rgba(255,127,80,0.6); width:100%;">
            <h1 class="rubrik1">Hotell SeaSharp</h1>

            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotell SeaSharp</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="dropdown nav-item">
                            <a class="nav-link" style="font-weight:bold">KONFERENSRUM</a>
                            <div class="dropdown-content p-2">
                                <a href="http://193.10.202.77/KonferensrumSida">Konferensrum</a>
                                <a href="#">Administratör</a>
                            </div>

                        </li>
                        <li class="dropdown nav-item">
                            <a class="nav-link" style="font-weight:bold">GÄST</a>
                            <div class="dropdown-content p-2">
                                <a href="http://193.10.202.78/GuestWebSite">Gästsida</a>
                                <a href="http://193.10.202.78/PublishGuestAdmin">Administratör</a>
                            </div>
                        </li>

                        @if (User.IsInRole("SysAdmin"))
                        {

                            <li class="dropdown nav-item">
                                <a class="nav-link" style="font-weight:bold">SYSTEM ADMINISTRATÖR</a>
                                <div class="dropdown-content p-2">
                                    <a asp-controller="User" asp-action="AdminProfile">Min Sida</a>
                                    <a asp-controller="User" asp-action="GetAllUsers">Användare</a>
                                    <a asp-controller="User" asp-action="Create">Skapa Användare</a>
                                </div>

                            </li>

                        }
                        else
                        {

                            <a class="nav-link" style="font-weight:bold" asp-controller="Login" asp-action="Login">PERSONAL</a>
                        }
                        <li class="dropdown nav-item">
                            <a class="nav-link" style="font-weight:bold;">BOKA RUM</a>
                            <div class="dropdown-content p-2">
                                <a href="http://193.10.202.81/Seasharp">Boka Rum</a>
                                <a href="http://193.10.202.81/Seasharpadmin">Administratör</a>
                            </div>
                        </li>

                        <li class="dropdown nav-item">
                            <a class="nav-link" style="font-weight:bold">RESTURANG/AKTIVITETER</a>
                            <div class="dropdown-content p-2">
                                <a href="http://informatik12.ei.hv.se/resakt">Resturang/Aktiviteter</a>
                                <a href="http://informatik12.ei.hv.se/resakt/Admin">Administratör</a>
                            </div>
                        </li>


                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link" style="font-weight:bold" asp-controller="Login" asp-action="Logout">Logga ut</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Hotell SeaSharp - <a asp-area="" asp-controller="Home" asp-action="Index">Till första sidan</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
